@model List<SinpeEmpresarial.Application.DTOs.Caja.ListCajaDto>

@{
    ViewBag.Title = "Listado de Cajas";
}

<style>
    .table-striped tbody tr:nth-of-type(odd) { background-color: #f8f9fa; }
    .table th { background-color: #e9ecef; font-weight: 600; border-right: 1px solid #dee2e6; }
    .table td { border-right: 1px solid #dee2e6; }
    .badge-success { background-color: #28a745; color: white; }
    .badge-secondary { background-color: #6c757d; color: white; }
</style>

<h2>Cajas Registradas</h2>

<p>
    @Html.ActionLink("Registrar Nueva Caja", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Teléfono SINPE</th>
            <th>Fecha Registro</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var caja in Model)
        {
            <tr>
                <td>@caja.Nombre</td>
                <td>@caja.Descripcion</td>
                <td>@caja.TelefonoSINPE</td>
                <td>@caja.FechaDeRegistro.ToString("yyyy-MM-dd")</td>
                <td>@(caja.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = caja.IdCaja }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Ver SINPE", "VerSinpe", new { telefonoSINPE = caja.TelefonoSINPE }, new { @class = "btn btn-sm btn-info" })

                </td>
            </tr>
        }
    </tbody>
</table>
