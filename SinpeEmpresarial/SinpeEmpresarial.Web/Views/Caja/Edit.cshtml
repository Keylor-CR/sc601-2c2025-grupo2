@model SinpeEmpresarial.Application.DTOs.Caja.EditCajaDto

@{
    ViewBag.Title = "Editar Caja";
}

<h2>Editar Caja</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdCaja)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Descripcion)
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TelefonoSINPE)
            @Html.TextBoxFor(m => m.TelefonoSINPE, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado)
            @Html.CheckBoxFor(m => m.Estado)
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
